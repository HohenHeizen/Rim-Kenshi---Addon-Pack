                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/PawnKindDef[defName="Hiver_Prince_Fog"]/apparelRequired</xpath>
                    <value>
                        <apparelRequired>
                            <li>Apparel_WarVeil</li>
                            <li MayRequire="Hive.Armory.Geminingen">Kenshi_HiverChainVest</li>
                        </apparelRequired>
                    </value>
                </li>

            </operations>
        </match>
    </Operation>
</Patch>