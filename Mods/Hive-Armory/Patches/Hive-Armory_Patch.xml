<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Hive Armory</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/PawnKindDef[defName="Breach_Drone"]/apparelRequired</xpath>
                    <value>
                        <apparelRequired>
                            <li>Apparel_WarVeil</li>
                            <li MayRequire="Hive.Armory.Geminingen">Kenshi_HiverChainVest</li>
                        </apparelRequired>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/PawnKindDef[defName="Breach_Drone_South"]/apparelRequired</xpath>
                    <value>
                        <apparelRequired>
                            <li>Apparel_WarVeil</li>
                            <li MayRequire="Hive.Armory.Geminingen">Kenshi_HiverChainVest</li>
                        </apparelRequired>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/PawnKindDef[defName="Breach_FogDrone"]/apparelRequired</xpath>
                    <value>
                        <apparelRequired>
                            <li>Apparel_WarVeil</li>
                            <li MayRequire="Hive.Armory.Geminingen">Kenshi_HiverChainVest</li>
                        </apparelRequired>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/PawnKindDef[defName="Heavy_Hiver_Soldier_Fog"]/apparelRequired</xpath>
