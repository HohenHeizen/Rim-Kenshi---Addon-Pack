<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!--Removes Fogman Faction-->
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>False</enabled>
		<label>Fogmen as default starting faction?:</label>
		<mods>
			<li>[HH] Rim-Kenshi: Addon Pack</li>
		</mods>


		<operations>

			<li Class="PatchOperationReplace">
				<xpath>/Defs/FactionDef[defName="HiverFogmen"]/startingCountAtWorldCreation</xpath>
				<value>
					<startingCountAtWorldCreation>1</startingCountAtWorldCreation>
				</value>
			</li>

		</operations>
	</Operation>

</Patch>