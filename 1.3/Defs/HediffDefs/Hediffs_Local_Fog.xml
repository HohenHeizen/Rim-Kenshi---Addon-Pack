<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <HediffDef>
    <defName>FogSickness</defName>
    <label>Fog Sickness</label>

    <description>A psychosis rumored to be caused by a parasite living in the brain, this mysterious illness causes a state of psychosis and cannabalistic bloodlust as the infected reverts back to more primal tendencies.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <comps>
      <li Class="HediffCompProperties_CauseMentalState">
        <animalMentalState>ManhunterPermanent</animalMentalState>
        <animalMentalStateAlias>Manhunter</animalMentalStateAlias>
        <humanMentalState>Berserk</humanMentalState>
        <mtbDaysToCauseMentalState>600</mtbDaysToCauseMentalState>
      </li>
      <li Class="HediffCompProperties_GetsPermanent">
        <becomePermanentChanceFactor>2</becomePermanentChanceFactor>
      </li>

    </comps>
    <stages>
      <li>
        <opinionOfOthersFactor>0</opinionOfOthersFactor>
        <partIgnoreMissingHP>true</partIgnoreMissingHP>        <!-- to avoid penalties from brain injuries, so manipulation is 100%+ -->
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    <chanceToCauseNoPain>0.20</chanceToCauseNoPain>
    <isBad>true</isBad>
    <tendable>false</tendable>
    <chronic>true</chronic>
    <blocksSocialInteraction>true</blocksSocialInteraction>
  </HediffDef>
</Defs>